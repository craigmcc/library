{
  "name": "@craigmcc/library",
  "version": "2.0.0",
  "description": "Personal Library Management Application",
  "main": "dist/server.js",
  "scripts": {
    "develop:dev": "concurrently \"npm:server:build:watch\" \"npm:start:dev\"",
    "develop:prod": "concurrently \"npm:server:build:watch\" \"npm:start:prod\"",
    "heroku:local": "cross-env heroku local web",
    "heroku:start": "node dist/server.js",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false && npm install --prefix client && npm run build --prefix client",
    "preheroku:local": "tsc",
    "postinstall": "tsc",
    "run": "cross-env NODE_ENV=production node dist/server.js",
    "run:dev": "cross-env NODE_ENV=development node dist/server.js",
    "run:prod": "cross-env NODE_ENV=production node dist/server.js",
    "server:build": "tsc",
    "server:build:watch": "tsc --watch --preserveWatchOutput",
    "start:dev": "cross-env NODE_ENV=development nodemon dist/server.js",
    "start:prod": "cross-env NODE_ENV=production nodemon dist/server.js",
    "test": "cross-env NODE_ENV=test mocha -r ts-node/register src/**/*.test.ts",
    "test:coverage": "cross-env NODE_ENV=test nyc mocha -r ts-node/register src/**/*.test.ts",
    "test:watch": "cross-env NODE_ENV=test mocha --watch -r ts-node/register src/**/*.test.ts",
    "tsc": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/craigmcc/library.git"
  },
  "keywords": [
    "express",
    "javascript",
    "node",
    "postgres",
    "react",
    "sequelize",
    "typescript"
  ],
  "author": "craigmcc",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/craigmcc/library/issues"
  },
  "homepage": "https://github.com/craigmcc/library#readme",
  "dependencies": {
    "@craigmcc/oauth-orchestrator": "^1.0.1",
    "@craigmcc/openapi-builders": "^1.0.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "custom-env": "^2.0.1",
    "date-fns": "^2.27.0",
    "express": "^5.0.0-alpha.8",
    "helmet": "^5.0.2",
    "morgan": "^1.10.0",
    "nyc": "^15.1.0",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "pino": "^7.6.4",
    "reflect-metadata": "^0.1.13",
    "rotating-file-stream": "^3.0.2",
    "sequelize": "^6.14.1",
    "sequelize-typescript": "^2.1.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.0",
    "@types/morgan": "^1.9.3",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "concurrently": "^7.0.0",
    "mocha": "^9.2.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  }
}
